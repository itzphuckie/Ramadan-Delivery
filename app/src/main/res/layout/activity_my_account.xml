<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/app_bar" />
    <LinearLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <ImageView
            android:src="@drawable/nav_user_pic"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <ImageView
            android:id="@+id/image_view_camera_button"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Name"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_name_my_account"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Phuc Nguyen"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Email"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_view_email_my_account"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="141 Convington Court, St. Charles, IL 72000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Phone Number"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_view_phone_my_account"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="714-777-7777"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Password"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_view_my_account"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>