<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:padding="15dp"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/text_view_ty_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your order!"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/text_view_ty_1"
            android:id="@+id/image_view_ty"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_thankyou_check_foreground"/>
        <TextView
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/text_view_thankyou_orderID"
            android:text="Your Order Number: 01298HBU12D12"
            android:layout_below="@+id/image_view_ty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="You will receive an email confirmation shortly."
            android:layout_below="@+id/text_view_thankyou_orderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_thankyou_to_category"
            android:text="Back to Shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/layout_button"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>


</RelativeLayout>
